{
	{% if hconfigs['vmess_enable'] and hconfigs['httpupgrade_enable'] %}
		"inbounds": [
			{
				"tag":"vmess-splithttp",
				"listen": "@@vmess-splithttp",
				"protocol": "vmess",
				"settings": {
				"clients": [
					{% for u in users %}
						{"id": "{{ u['uuid'] }}", "email": "{{ u['uuid'] }}@hiddify.com", "alterId": 0},
					{% endfor %}
				]
				},
				"streamSettings": {
				"network": "splithttp",
				"security": "none",
				"splithttpSettings": {
					"acceptProxyProtocol": true,
					"path": "/{{ hconfigs['path_vmess'] }}{{ hconfigs['path_splithttp'] }}", 
				}
				},
				"sniffing": {
				"enabled": true,
				"destOverride": ["http","tls", "quic"]
				}
			}	  
		]
	{% endif %}
}